<Window x:Class="EasyBay.Terminal.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyBay.Terminal.Windows"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <Grid>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="User">
                <MenuItem Header="Register" Click="Register" ></MenuItem>
                <MenuItem Header="Login" Click="Login" ></MenuItem>
                <Separator />
                <MenuItem Header="Exit" Click="Exit" ></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
