@model Storage.User
@namespace Storage

    <div >
        <fieldset class="fform">
            <div class="content">
                <label for="username">Username:</label>
                <text id="username"><em> @Model.Username</em></text><br />
                <br />

                <label for="email">Email:</label>
                <text id="email"><em> @Model.Email</em></text><br />
                <br />

                <label for="balance">Balance:</label>
                <text id="balance"><em> @Model.Balance USD</em></text><br />
                <br />

                <label for="loc">Locked Balance:</label>
                <text id="loc"><em> @Model.LockedBalance USD</em></text><br />
                <br />

                <a class="btn grow" asp-controller="User" asp-action="Change" asp-route-username="@Model.Username">Change</a>

                @if (Model.Role == Role.Admin)
                {
                    <a class="btn grow" asp-controller="User" asp-action="AddLot">Add Lot</a>
                }
            </div>
            

        </fieldset>
    </div>

