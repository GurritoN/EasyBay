<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Home</title>

    <link rel="stylesheet" href="~/css/style.css">
 
</head>
<body>
    <header class="bar-pic">
        <div class="header-left">
            <a asp-action="Index" asp-controller="Home">
                <img class="logo grow" alt="EasyBay" src="~/images/EasyBay.png">
            </a>
        </div>
        <div class="header-right">
            @if (!User.Identity.IsAuthenticated)
            {
                <a class="bar grow" asp-controller="User" asp-action="Login">Sign In</a>

                <a class="bar grow" asp-controller="User" asp-action="Register">Sign Up</a>
            }
            else
            {
                <a class="bar grow" asp-controller="User" asp-action="Index" asp-route-username="@User.Identity.Name">@User.Identity.Name</a>
                <a class="bar grow" asp-action="User" asp-controller="Lot" asp-route-username="@User.Identity.Name">My Lots</a>
                <a class="bar grow" asp-action="Index" asp-controller="Lot">Auction</a>
                <a class="btn grow" asp-controller="User" asp-action="Logout">Logout</a>
            }
        </div>
    </header>
    <main>
        <div class="content">
            @RenderBody()
        </div>
    </main>
    <footer class="clearfix">
        &copy; Copyright 2019 EasyBay
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
